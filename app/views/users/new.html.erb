<div class="row justify-content-md-center">
  <div class="col-6">
    <%= simple_form_for @user do |f| %>
      <div class="form-group row">
        <%= f.label '名字' %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group row">
        <%= f.label '邮箱' %>
        <%= f.text_field :email %>
      </div>
      <div class="form-group row">
        <%= f.label '密码' %>
        <%= f.password_field :password %>
      </div>
      <div class="form-group row">
        <%= f.label '确认密码' %>
        <%= f.password_field :password_confirmation %>
      </div>
      <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
