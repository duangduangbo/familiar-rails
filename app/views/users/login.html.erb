<div class="row">
  <div class="col-6">
    <%= form_tag "/sign_in" do %>
      <div class="form-group row">
        <%= label_tag '用户名' %>
        <%= text_field_tag :name, params[:name] %>
      </div>
      <div class="form-group row">
        <%= label_tag '密码' %>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <%= submit_tag "登陆" %>
    <% end %>
  </div>
</div>
