<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>文章列表</h1>
  <%= link_to '新建文章', new_article_path, class: 'btn btn-success' %>
  <p></p>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>id</th>
        <th>用户ID</th>
        <th>标题</th>
        <th>内容</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <th scope="row"><%= article.id %></th>
          <td><%= article.user_id %></td>
          <td><%= article.title %></td>
          <td><%= article.content %></td>
          <td>
            <%= link_to '查看', article, class: 'btn btn-primary btn-sm' %>
            <%= link_to '编辑', edit_article_path(article), class: 'btn btn-primary btn-sm' %>
            <%= link_to '删除', article, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: '确认删除？' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>  
</div>
